@model BeverageMachine.ViewModel.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_User.cshtml";
}

    <form class="decor" method="post" asp-controller="Account" asp-action="Register" >
        <div class="form-left-decoration"></div>
        <div class="form-right-decoration"></div>
        <div class="circle"></div>
        <div class="form-inner">
            <div asp-validation-summary="ModelOnly"></div>
            <h3 align="center">Регистрация</h3>
            <input type="email" placeholder="Email" required asp-for="Email">
            @*<span asp-validation-for="Email" class="bar"></span>
        <label asp-for="Email">Email</label>*@
            <input type="password" placeholder="Пароль" required asp-for="Password">
            @*<span asp-validation-for="Password" class="bar"></span>
        <label asp-for="Password">Пароль</label>*@
            <input type="password" placeholder="Повторите пароль" required asp-for="PasswordCompare">
            @*<span asp-validation-for="PasswordCompare" class="bar"></span>
        <label asp-for="PasswordCompare">Повторите пароль</label>*@
            <input type="submit" value="Регистрация">
        </div>
    </form>

