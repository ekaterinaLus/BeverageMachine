@model DrinkViewModel
@{
    ViewData["Title"] = "Add drink";
}
<h1>@ViewData["Title"]</h1>
<h1 class="display-4">OOOOOOOYYYYEEEEEE</h1>
<form asp-action="create" asp-controller="product">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label">Цена</label>
        <input type="number" asp-for="Amount" min="1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label">Количество</label>
        <input type="number" asp-for="Quantity" min="1" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить в базу" class="btn btn-default" />
    </div>
</form>
